<h1>Music Library Store</h1>

<table class="publicListTable">
	<% for album in @albums %>
	<% row_color = cycle("CCCCCC", 'FFFFFF') %>
		<tr style="background-color: #<%= row_color %>;">
			<td rowspan="2">
				<%= image_tag(album.image_path, :size => '90x90') %>
			</td>
			<td>
				<p class="publicListAlbumInfo bold"><%= link_to album.title, album %></p>
			</td>
			<td>
				<p class="publicListAlbumInfo bold"><%= link_to album.artist.name, album.artist if album.artist %></p>
			</td>
			<td>
				<p class="publicListAlbumInfo"><%= humanized_money_with_symbol album.price %></p>
			</td>
		</tr>
		<tr  style="background: #<%= row_color %>;">
			<td>
				<p class="publicListAlbumInfo">Released: <%= album.release_date.strftime("%d %B %Y") %></p>
			</td>
			<td>
				<p class="publicListAlbumInfo">Genre: <%= album.genre %></p>
			</td>
			<td>
				<p class="publicListAlbumInfo">Add to Cart</p>
			</td>
		</tr>
	<% end %>
	
</table>
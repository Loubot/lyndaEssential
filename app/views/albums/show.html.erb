<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @album.title %>
</p>

<p>
  <b>Artist:</b>
  <%= @artist.name %>
</p>

<p>
  <b>Release date:</b>
  <%= @album.release_date.to_date %>
</p>

<p>
  <b>Genre:</b>
  <%= @album.genre %>
</p>

<p>
  <b>Features:</b>
  <% for feature in @album.features %>
    <%= feature.name %><br>
  <% end %>
</p>



